/**index.wxss**/

.pay-box {
  width: 100%;
  height: 50px;
  background: black;
  position: fixed;
  left: 0;
  bottom: 0;
}

.pay-number {
  width: 60%;
  height: 100%;
  float: left;
  box-sizing: border-box;
  line-height: 50px;
}

.pay-number>text {
  color: lightgray;
  margin-left: 300rpx;
  font-size: 0.8rem;
}

.shopping-cart {
  width: 80px;
  height: 80px;
  position: absolute;
  left: 20px;
  top: -40px;
  box-sizing: border-box;
  padding: 19px;
  border-radius: 50%;
  overflow: hidden;
  background-color: black;
}

.shopping-item {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
}

.shopping-item>image {
  width: 100%;
  height: 100%;
}

.pay-btn {
  width: 40%;
  height: 100%;
  float: left;
  box-sizing: border-box;
  text-align: center;
  line-height: 50px;
  color: #fff;
  background-color: #58b957;
  border-color: #58b957;
}

.pay-btn:active {
  color: #fff;
  background-color: #429c41;
  background-image: none;
  border-color: #3f953e;
}
