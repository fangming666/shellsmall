/**index.wxss**/

.pay-box {
  width: 100%;
  height: 50px;
  background: black;
  position: fixed;
  left: 0;
  bottom: 0;
}

.pay-number {
  width: 60%;
  height: 100%;
  float: left;
  box-sizing: border-box;
  line-height: 50px;
}

.pay-number>text {
  color: lightgray;
  margin-left: 300rpx;
  font-size: 0.8rem;
}

.shopping-cart {
  width: 80px;
  height: 80px;
  position: absolute;
  left: 20px;
  top: -40px;
  box-sizing: border-box;
  padding: 9px;
  border-radius: 50%;
  /* overflow: hidden; */
  background-color: black;
}

.shopping-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #2a353d;
  border-radius: 50%;
  position: relative;
}

.cart-num {
  width: 20px;
  height: 20px;
  background-color: red;
  color: white;
  text-align: center;
  line-height: 20px;
  position: absolute;
  right: -10px;
  top: -15px;
  border-radius: 50%;
}

.shopping-item>image {
  width: 60%;
  height: 60%;
}

.pay-btn {
  width: 40%;
  height: 100%;
  float: left;
  box-sizing: border-box;
  text-align: center;
  line-height: 50px;
  color: #fff;
  background-color: #58b957;
  border-color: #58b957;
}

.pay-btn:active {
  color: #fff;
  background-color: #429c41;
  background-image: none;
  border-color: #3f953e;
}

.head {
  width: 100%;
  height: 88px;
  position: relative;
}

.head-bg {
  width: 100%;
  height: 100%;
  background-image: url("http://fm.xiaofany.com/shellSmall/headBg.jpg");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: absolute;
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
  z-index: -1;
}

.head-title {
  color: #a59f9a;
  font-size: 1.2rem;
  height: 60px;
  line-height: 60px;
  text-align: center;
  display: block;
}

.head-notice {
  height: 28px;
  line-height: 28px;
}

.head-notice-title {
  display: inline-block;
  margin-left: 1rem;
  width: 30px;
  height: 1rem;
  text-align: center;
  line-height: 1rem;
  color: white;
  font-size: 12px;
  border-radius: 4px;
  background-color: lightgray;
}

.head-notice-info {
  margin-left: 1rem;
  font-size: 1rem;
}

.goods-warp {
  height: calc(100vh - 140px);
  padding: 10px 0;
}

.goods {
  width: 100%;
  height: 160rpx;
  padding: 10rpx;
  box-sizing: border-box;
  margin: 15rpx;
}

.goods-img {
  width: 140rpx;
  height: 140rpx;
  margin-right: 40rpx;
}

.goods-title {
  color: #3a3a3a;
  font-size: 0.9rem;
}

.goods-item {
  width: calc(100vw - 200rpx);
}

.goods-item>.text-muted {
  font-size: 14px;
}

.goods-now {
  margin-top: 10rpx;
  font-size: 16px;
  font-weight: 600;
}

.goods-now>.count {
  float: right;
  margin-right: 3rem;
}
