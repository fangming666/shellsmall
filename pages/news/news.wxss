/* pages/news/news.wxss */

.news-warp {
  padding: 0.7rem 0;
}

.news-title {
  text-align: center;
  margin-bottom: 1rem;
}

.news-list {
  border-bottom: 1px solid lightgray;
  margin-bottom: 0.5rem;
  padding: 0.5rem;
  width: 95%;
  margin: 0 auto;
  box-sizing: border-box;
}

.news-time {
  font-size: 16px;
  color: rgba(0, 0, 0, 0.8);
}

.news-info>image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.news-info>view {
  margin-left: 1rem;
}

.news-name {
  color: #fa9003 !important;
  display: block;
  margin-bottom: 0.5rem;
}

.news-text {
  font-size: 15px;
}

.dialog-box {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background: lightgray;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
}

.dialog-box>input {
  height: 29px;
  position: relative;
  left: 1rem;
}
