/**app.wxss**/

.pull-left, float-left {
  float: left;
}

.pull-right, float-right {
  float: right;
}

.clearfix:after {
  clear: both;
  content: "";
  display: block;
}

.text-muted {
  color: #9b9b9b;
}

.text-danger {
  color: #db524b;
}

.m-r-2 {
  margin-right: 2rem;
}

.m-r-1 {
  margin-right: 1rem;
}

.m-l-1 {
  margin-left: 1rem;
}

.reduceBtn, .addBtn {
  width: 1rem;
  height: 1rem;
  margin: 0 0.5rem;
}

.text-primary {
  color: #479dd4 !important;
}

.text-left {
  text-align: left !important;
}
